{
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "pretty": true,
    "sourceMap": true,
    "newLine": "lf"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "lib",
    "__tests__/",
    "node_modules"
  ]
}